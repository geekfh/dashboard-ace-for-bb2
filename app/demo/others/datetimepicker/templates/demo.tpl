<form class="form-horizontal container" role="form">
    <div class="form-group">
        <label for="time" class="col-md-2 control-label">选择日期</label>
        <div class="col-md-6">
            <input id="time" name="time" class="form-control">
        </div>
        <span class="col-md-4"></span>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">选择日期2</label>
        <div class="col-md-6">
            <div class="input-group date">
                <input type="text" class="form-control" value="12-02-2012">
                <div class="input-group-addon">
                    <span class="icon-th"></span>
                </div>
            </div>
        </div>
        <span class="col-md-4"></span>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">选择日期3</label>
        <div class="col-md-6">
            <input type="text" name="bsDate" class="form-control" value="2016/12/12 10:25">
        </div>
        <span class="col-md-4"></span>
    </div>

    <div class="form-group">
        <label for="time" class="col-md-2 control-label">选择范围</label>
        <div class="col-md-6">
            <div class="input-group input-daterange">
                <input type="text" class="form-control" value="2016-12-05">
                <span class="input-group-addon">to</span>
                <input type="text" class="form-control" value="2016-12-19">
            </div>
        </div>
        <span class="col-md-4"></span>
    </div>

</form>